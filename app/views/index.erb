<link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.6/css/bootstrap.min.css" integrity="sha384-1q8mTJOASx8j1Au+a5WDVnPi2lkFfwwEAa8hDDdjZlpLegxhjVME1fgjWPGmkzs7" crossorigin="anonymous">

<div class='col-lg-12 navbar navbar-default navbar-static-top'>
  <a class='navbar-brand'>Rush Hour</a>
</div>
<div class="list-group">

  <a class="list-group-item active">
    Payload Request Statistics
  </a>

      <a class="list-group-item">
          Average response time across all requests: <%= @client.payload_requests.average_response_time %>ms
      </a>

      <a class="list-group-item">
          Max Response time accross all requests: <%= @client.payload_requests.max_response_time %>ms
      </a>

      <a class="list-group-item">
          Min Response time across all requests: <%= @client.payload_requests.min_response_time %>ms
      </a>

      <a class="list-group-item">
        Most frequent request type: <%= @client.payload_requests.most_frequent_request_type %>
      </a>

      <a class="list-group-item">
        List of all HTTP verbs used: <%= @client.payload_requests.all_http_verbs %>
      </a>

      <a class="list-group-item">
        List of URLs listed from most requested to least requested:
          <% @client.payload_requests.url_most_requested_to_least.each do |url| %>
          <a href="/sources/<%= url.split('/')[2][0..-5] %>/urls/<%=url.split('/').last %>"> <%= url %></a>
          <% end %>
      </a>

      <a class="list-group-item">
        Web browser breakdown across all requests(userAgent): <%= @client.user_agent_bs.web_browser_breakdown.uniq %>
      </a>

      <a class="list-group-item">
        OS breakdown across all requests(userAgent): <%= @client.user_agent_bs.os_breakdown %>
      </a>

      <a class="list-group-item">
        Screen Resolutions across all requests (resolutionWidth x resolutionHeight):
        <%= @client.resolutions.screen_resolutions  %>
      </a>

  <script src="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.6/js/bootstrap.min.js" integrity="sha384-0mSbJDEHialfmuBBQP6A4Qrprq5OVfW37PRR3j5ELqxss1yVqOtnepnHVP9aJ7xS" crossorigin="anonymous"></script>
